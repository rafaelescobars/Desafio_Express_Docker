<div>
  <div class="container">
    <h1 class="d-flex justify-content-center text-light">
      Tareas
    </h1>
  </div>
  <div class="container">
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th scope="col">Nombre</th>
          <th scope="col">Tarea</th>
          <th scope="col">Fecha</th>
          <th scope="col">Eliminar</th>
        </tr>
      </thead>
      <tbody>
        {{#each todos}}
          <tr>
            <td>{{this.nombre}}</td>
            <td>{{this.descripcion}}</td>
            <td>{{moment date=this.fecha_creacion format="DD-MM-YYYY"}}</td>
            <td><a href="/todo-delete/{{this.id}}">Eliminar</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
