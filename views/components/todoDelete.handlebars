          <form>
            <div class="mb-3">
              <label for="" class="form-label">Nombre</label>
              <input type="text" class="form-control" id="" aria-describedby="" name="nombre" disabled value="{{todo.nombre}}">
            </div>
            <div class="mb-3">
              <label for="" class="form-label">Descripci√≥n</label>
              <input type="text" class="form-control" id="" name="descripcion" disabled value="{{todo.descripcion}}">
            </div>
            <div class="mb-3">
              <label for="" class="form-label">Fecha</label>
              <input type="text" class="form-control" id="" name="fecha" disabled value="{{moment date=todo.fecha_creacion format="DD-MM-YYYY"}}">
